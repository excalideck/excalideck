{
  "extends": "../tsconfig.common.json",
  "compilerOptions": {
    // Language and Environment
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],

    // Modules
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",

    // Emit
    "noEmit": true,

    // JavaScript support
    "allowJs": true,

    // Interop Constraints
    "isolatedModules": true,

    // Completeness
    "skipLibCheck": true
  },
  "include": ["src"]
}
